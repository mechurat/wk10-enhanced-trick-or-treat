<!doctype html>
<html>

<head>
    <title>{{title}}</title>

    <!-- semantic UI -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.css">

    <style>
        .grid {
            height: 70%;
        }

    </style>
</head>

<body>
    <div class="ui middle aligned center aligned grid">
        <div class="ui fixed inverted main menu">
            <h1 class="item header"><a href="/">Trick or Treat?</a></h1>
            
            <!-- Routes for Login/Signup and Logout-->
            <div class="right menu">
                {{#if user}}
                    <span class="item">{{user.username}}</span>
                    <a href="/logout" class="item">Logout</a>
                {{else}}
                    <form id="login">
<!--
                        <input type="text" name="username" placeholder="Username">
                        <input type="password" name="password" placeholder="Password">
                        <input type="submit" value="Login" class="item">
-->
                    </form>
                    <a href="/auth/facebook" class="item">Login with Facebook</a>
                    <a href="/login" class="item">Login</a>
                    <a href="/signup" class="item">Sign Up</a>
                {{/if}}
            </div>
        </div>
        <div class="row">
            <div class="column">
                {{{body}}}
            </div>
        </div>
    </div>

    {{#if flash}}
    <div class="ui {{flash.type}} message">
        <i class="close icon"></i>
        <div class="header">
            {{flash.header}}
        </div>
        <div>
            <p>
                {{flash.body}}
            </p>
        </div>
    </div>
    {{/if}}

    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>

    <!-- semantic ui js -->
    <script src="https://cdn.jsdelivr.net/semantic-ui/2.2.4/semantic.min.js"></script>

</body>

</html>
